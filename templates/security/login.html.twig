{% extends 'base.html.twig' %}

{% block title %}Kaamel'O'tt - Connexion{% endblock %}

{% block body %}
<form method="post">
    <main  class="p-3">
        <div class="text-center mb-3">
        
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% else %}
                <h2 class="main__item">Veuillez vous connecter</h2>
        
                <div class="card mt-3 mb-3"> 
                    <div class="card-body text-bg-secondary">
                        <label class="p-2" for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        
                        <label class="p-2" for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-outline-light" type="submit">Valider</button>
                    </div>
                </div>
            {% endif %}
        </div>
    </main>

</form>
{% endblock %}
