{% extends 'base.html.twig' %}

{% block title %}Kaamel'O'tt - Episodes{% endblock %}

{% block body %}

<main>
    
    <div class="main-content">
        <h1>Liste des Episodes</h1>
    </div>

    <div class="container  ">
        <a href="{{ path('app_backoffice_episode_new') }}" class="btn btn-primary" >Ajouter un Ã©pisode</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Number</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for episode in pagination %}
                <tr>
                <th scope="row">{{ episode.id }}</th>
                    <td>{{ episode.title }}</td>
                    <td>{{ episode.number }}</td>
                    <td>
                        <a href="{{ path('app_backoffice_episode_show', {'id': episode.id}) }}" class="btn btn-success">voir</a>
                        <a href="{{ path('app_backoffice_episode_edit', {'id': episode.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}

            

            </tbody>
        </table>
        <div class="card mt-3 mb-3"> 
        <div class="card-body text-bg-secondary">
        {{ knp_pagination_render(pagination) }}
        {# !  https://github.com/KnpLabs/KnpPaginatorBundle/blob/master/docs/templates.md #}
        </div>
        </div>
   </div>
</main>   
    
{% endblock %}
