{% extends 'base.html.twig' %}

{% block title %}Kaamel'O'tt - Avatars{% endblock %}

{% block body %}
<main>
    <div class="main-content">
        <h1>Avatars</h1>
    </div>
    <div class="content">
        <a href="{{ path('app_backoffice_avatar_browse') }}" class="btn btn-primary">Retour Ã  la liste</a>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ avatar.id }}</td>
                </tr>
                <tr>
                    <th>Nom de l'avatar</th>
                    <td>{{ avatar.name }}</td>
                </tr>
                <tr>
                    <th>Icone</th>
                    <td>{{ avatar.icon }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_backoffice_avatar_edit', {'id': avatar.id}) }}" class="btn btn-warning">Modifier</a>

        {% if is_granted("ROLE_ADMIN") %}
            {{ include('backoffice/avatar/_delete_form.html.twig') }}
        {% endif %}
    </div>
</main>
{% endblock %}
