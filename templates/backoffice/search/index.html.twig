{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<main>
    <div class="main-content">
    <h1>Liste des personnages</h1>
    </div>

     <div class="container  ">
     <a href="{{ path('app_backoffice_home') }}" class="btn btn-primary">Retour à l'accueil</a>

    <table class="table table-striped">
        <thead>
            <tr>
                
                <th>Nom du personnage</th> 
                <th>Citation</th>
                <th>Titre de l'épisode</th>
                <th>Saison</th>
                
            </tr>
        </thead>
        <tbody>
        {% for quote in pagination %}
            <tr>
                
               
                <td>{{ quote.personage.name }}</td> 
                 <td>{{quote.text|slice(0, 150) }} [...]</td>
                <td>{{ quote.titleEpisode }}</td>
                <td>{{ quote.titleSeason }}</td> 
                
               {#  <td>
                    <a href="{{ path('app_backoffice_personage_read', {'id': personage.id}) }}"class="btn btn-success" >voir</a>
                    <a href="{{ path('app_backoffice_personage_edit', {'id': personage.id}) }}" class="btn btn-warning">modifier</a>
                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
      {{ knp_pagination_render(pagination) }} 
</main>
{% endblock %}
