{% extends 'base.html.twig' %}

{% block title %}Kaamel'O'tt - Saisons{% endblock %}

{% block body %}

<main>
    <div class="main-content">
        <h1>Liste des Saisons</h1>
    </div>

    <div class="content">
        <a href="{{ path('app_backoffice_season_add') }}" class="btn btn-primary" >Ajouter une saison</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Titre de la saison</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for season in seasons %}
                <tr>
                    <th scope="row">{{ season.id }}</th>
                    <td>{{ season.title }}</td>
                    <td>
                        <a href="{{ path('app_backoffice_season_read', {'id': season.id}) }}" class="btn btn-success">Voir</a>
                        <a href="{{ path('app_backoffice_season_edit', {'id': season.id}) }}" class="btn btn-warning">Modifier</a>
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas de saison trouv√© !</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</main>    
{% endblock %}
