                    {% if scoreArray is not empty %}
                    {% for score in scoreArray %}
                    <p>Votre dernier score pour le quizz {{ score.quizz_id }} est : {{ score.score }}</p>
                    {% endfor %}
                    {% else %}
                    <p>Vous n'avez pas encore joué à nos quizz.</p>
                    {% endif %}   
                </div>
                <div class="d-flex justify-content-around">
                    <a class="btn btn-outline-light" href="{{ path("user_edit_profile", {"id" : user.id}) }}">Modifier</a>

                    {{ include('frontoffice/user/_delete_form.html.twig') }}
                </div>    
            </div>
        </div>
